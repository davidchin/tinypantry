angular.module('password')
  .config ($stateProvider, ModalProvider) ->
    $stateProvider
      .state 'password',
        url: '/password'
        abstract: true
        template: '<ui-view />'

      .state 'password.reset',
        url: '/reset'
        templateUrl: '<%= asset_path("password/reset.html") %>'
        controller: 'PasswordResetController'

    ModalProvider
      .when 'passwordReset',
        templateUrl: '<%= asset_path("password/reset-modal.html") %>'
        controller: 'PasswordResetController'
