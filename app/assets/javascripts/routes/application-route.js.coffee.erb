angular.module('application')
  .config ($stateProvider, $urlRouterProvider) ->
    $stateProvider
      .state 'home',
        onEnter: ['$timeout', '$state', ($timeout, $state) ->
          $timeout -> $state.go 'recipes.index'
        ]

    $urlRouterProvider
      .when '/recipes', '/'
      .otherwise '/errors/404'
